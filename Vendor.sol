contract Vendor is ERC20, Ownable {
address  public _owner;

  // token price for USDT
  uint256 public tokensPerUSDT = 10000 ; //100 tokens for 1 USDT
  IERC20 public immutable USDTToken;
  
  // Event that log buy operation
  event BuyTokens(address buyer, uint256 amountOfETH, uint256 amountOfTokens, uint256 _tokensPerUSDT);
  event SellTokens(address seller, uint256 amountOfTokens, uint256 amountOfETH, uint256 _tokensPerUSDT);


  constructor(IERC20 _USDTToken) ERC20("Scaffold ETH Token", "SET") {
       _owner = msg.sender;
       _mint(address(this), 1000000 * 10 ** 18);
       USDTToken = _USDTToken;
    }
    function SetTokenprice(uint256 _price) external onlyOwner{
        require(_price >= 0, "CANNOT_BE_BELOW_0");
        tokensPerUSDT = _price;
    }

  /**
  * @notice Allow users to buy token for ETH
  */
  function buyTokens(uint256 USDTamount) external returns (bool) {
    require(USDTamount > 0, "Invalid amount to buy");

    uint256 amountToBuy = USDTamount * tokensPerUSDT*(10**12)/100;

    // check if the Vendor Contract has enough amount of tokens for the transaction
    uint256 vendorBalance = balanceOf(address(this));
    require(vendorBalance >= amountToBuy, "Vendor contract does not have enough tokens");
    //transfer USDT from user to this contract
    USDTToken.transferFrom(msg.sender,address(this), USDTamount);
    // Transfer token to the msg.sender
    _transfer(address(this),msg.sender, amountToBuy);

    // emit the event
    emit BuyTokens(msg.sender, USDTamount, amountToBuy, tokensPerUSDT);

    return true;
  }

 function sellTokens(uint256 tokenAmountToSell) external {
    // Check that the requested amount of tokens to sell is more than 0
    require(tokenAmountToSell > 0, "Invalid amount to sell");

    // Check that the user's token balance is enough to do the swap
    uint256 userBalance = balanceOf(msg.sender);
    require(userBalance >= tokenAmountToSell, "Insufficient balance");

    // Check that the Vendor's balance is enough to do the swap
    uint256 amountOfUSDTToTransfer = tokenAmountToSell *(10**12) / (tokensPerUSDT/100);
    uint256 ownerUSDTBalance = USDTToken.balanceOf(address(this));
    require(ownerUSDTBalance >= amountOfUSDTToTransfer, "Vendor does not have enough USDT");
   // _approve(_owner, msg.sender, tokenAmountToSell);
    _transfer(msg.sender, address(this), tokenAmountToSell);

    //(bool sent,) = msg.sender.call{ gas :10000, value: amountOfETHToTransfer}("");
    USDTToken.transfer(msg.sender, amountOfUSDTToTransfer);

    emit SellTokens(msg.sender, tokenAmountToSell, amountOfUSDTToTransfer, tokensPerUSDT);    
  }

  /**
  * @notice Allow the owner of the contract to withdraw ETH
  */
  function withdraw(uint256 _amount) external onlyOwner {
    uint256 ownerBalance = address(this).balance;
    require(ownerBalance >= _amount, "Owner has not balance to withdraw");

    (bool sent,) = msg.sender.call{ gas :10000,value: _amount}("");
    require(sent, "Failed to send user balance back to the owner");
  }

  function withdrawTokens(IERC20 _tokenaddress,uint256 _amount) external onlyOwner {
    uint256 ownerBalance = _tokenaddress.balanceOf(address(this));
    require(ownerBalance >= _amount, "Owner does not have enough tokens to withdraw");
    _tokenaddress.transfer(msg.sender, _amount);
  }

  function burn( uint256 amount) external {
        _burn(msg.sender, amount);
  }
  receive() payable external{}
}
